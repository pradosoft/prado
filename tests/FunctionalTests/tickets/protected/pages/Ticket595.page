<com:TButton Text="Click" ValidationGroup="A" />

<br />

<com:TTextBox ID="B" />
<com:TRequiredFieldValidator ControlToValidate="B" Text="Required!" ControlCssClass="errorclassB" 
        ValidationGroup="B" EnableClientScript="False" />
